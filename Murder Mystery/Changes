	
	public Rect label;
	public string playerNum;


	void OnGUI(){

		label.width = 300;
		label.height = 300;

		GUI.Label (label, playerNum + Mathf.RoundToInt(dModeTotal) + "%");
		
	}


	public void setLabel(int x, int y, string playernum){
		label.x = x;
		label.y = y;
		playerNum = playernum;
	}


